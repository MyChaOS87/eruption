name = "System Monitor"
description = "Monitor your system using your keyboard"
version = "0.0.4"
author = "The Eruption development team"
min_supported_version = "0.0.12"
tags = ['Background', 'Vendor', 'Demo']

[[config]]
type = 'color'
name = 'color_cold'
description = 'Cold color'
default = 0xff00ff00

[[config]]
type = 'color'
name = 'color_hot'
description = 'Hot color'
default = 0xffff0000

[[config]]
type = 'float'
name = 'max_temperature'
description = 'Package max. temperature'
min = 0.0
max = 120.0
default = 95.0
